{

    "version":          "1.3",
    "manifest_version": 2,
    "name":             "Balu",
    "options_page":     "options.html",
    "description":      "Balu recommends ethical alternatives to everyday consumer products",
    "offline_enabled":  false,

    "background": {
        "scripts":     ["js/externalJS/parse-1.4.2.min.js",
                        "js/BG_logging.js",
                        "js/BG_APIs.js",
                        "js/BG_main.js"],
        "persistent": false
    },

    "browser_action": {
        "default_title": "Balu",
        "default_icon":  "images/icon-browser_action.png",
        "default_popup": "popup.html"
    },


    "content_scripts": [{
        "matches":    ["*://*/*"],
        "js":         ["js/CS_APIs.js",
                       "js/CS_search.js",
                       "js/CS_main.js"],
        "run_at":     "document_end"
    }],

    "web_accessible_resources": [
        "options.html",
        "userSubmittedRec.html",

        "images/*.jpg",
        "images/*.png",

        "css/foundation.css",
        "css/app.css",
        "css/foundation-icons.css",
        "css/foundation-icons.woff",
        "css/foundation-icons.ttf",
        "css/app-icons.css",
        "css/opentip.css",

        "js/externalJS/opentip-native.js"
    ],

    "permissions": [
        "http://*/*",
        "https://*/*",
        "storage",
        "tabs"
    ]
}
